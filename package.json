{
  "name": "focusflow",
  "version": "1.0.1",
  "description": "A Smart Pomodoro & Website Blocker App to enhance productivity.",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "author": "Muhammad Imran Ashiq",
  "license": "MIT",
  "devDependencies": {
    "electron": "^25.0.0",
    "electron-builder": "^24.0.0"
  },
  "build": {
    "appId": "io.github.Imran-Ashiq.focusflow",
    "productName": "FocusFlow",
    "copyright": "Copyright Â© 2025 Muhammad Imran Ashiq",
    "files": [
      "src/**/*",
      "assets/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icons/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "license": "LICENSE.md"
    }
  }
}
